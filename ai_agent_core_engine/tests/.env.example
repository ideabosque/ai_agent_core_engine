# ---------------------------------------------------------------------------
# AWS credentials
# ---------------------------------------------------------------------------
region_name=us-west-2
aws_access_key_id=YOUR_AWS_ACCESS_KEY_ID
aws_secret_access_key=YOUR_AWS_SECRET_ACCESS_KEY

# ---------------------------------------------------------------------------
# API Gateway
# ---------------------------------------------------------------------------
api_id=YOUR_API_GATEWAY_ID
api_stage=beta

# ---------------------------------------------------------------------------
# Function deployment paths
# ---------------------------------------------------------------------------
funct_bucket_name=YOUR_S3_BUCKET_NAME
funct_zip_path=/path/to/funct_zips
funct_extract_path=/path/to/silvaengine

# Optional: SQS task queue name (leave blank if not used)
# task_queue_name=silvaengine_task_queue.fifo

# Optional: WebSocket connection ID (leave blank if not used)
# connection_id=

# ---------------------------------------------------------------------------
# Engine identity
# ---------------------------------------------------------------------------
endpoint_id=YOUR_ENDPOINT_ID
part_id=YOUR_PART_ID

# ---------------------------------------------------------------------------
# MCP server
# ---------------------------------------------------------------------------
mcp_server_url=https://YOUR_API_ID.execute-api.YOUR_REGION.amazonaws.com/beta/core/{endpoint_id}/mcp
x-api-key=YOUR_MCP_API_KEY

# Optional: bearer token for MCP server (leave blank if not used)
# bearer_token=

# ---------------------------------------------------------------------------
# GraphQL API (used by run_chatbot.py)
# ---------------------------------------------------------------------------
api_url=https://YOUR_API_ID.execute-api.YOUR_REGION.amazonaws.com/beta/core/YOUR_ENDPOINT_ID/ai_agent_core_graphql
api_key=YOUR_GRAPHQL_API_KEY

# ---------------------------------------------------------------------------
# Table initialisation (set to 1 only on first run)
# ---------------------------------------------------------------------------
initialize_tables=0

# Cache (set to 1 to enable)
cache_enabled=0

# ---------------------------------------------------------------------------
# Test scope control
# ---------------------------------------------------------------------------
# Run only one test function by name (matches AI_AGENT_TEST_FUNCTION in conftest).
# Leave empty to run all collected tests.
# Example: test_graphql_get | test_graphql_insert | test_graphql_full_cycle
AI_AGENT_TEST_FUNCTION=

# Global entity-type filter (comma-separated). Empty = run all 17 entity types.
# Valid names: llm, agent, thread, run, message, tool_call, fine_tuning_message,
#              async_task, element, wizard, wizard_schema, wizard_group,
#              wizard_group_filter, ui_component, mcp_server, prompt_template,
#              flow_snippet
TEST_ENTITY_TYPES=

# Per-operation overrides (take precedence over TEST_ENTITY_TYPES).
# Leave empty to inherit TEST_ENTITY_TYPES.
INSERT_ENTITY_TYPES=
GET_ENTITY_TYPES=
LIST_ENTITY_TYPES=
UPDATE_ENTITY_TYPES=
DELETE_ENTITY_TYPES=

# Entity types to include in the full-cycle test (insert→update→get→list→delete).
# Leave empty to inherit TEST_ENTITY_TYPES.
FULL_CYCLE_ENTITY_TYPES=

# Set to 1 to enable the delete step inside the full-cycle test.
full_lifecycle_flow=0

# ---------------------------------------------------------------------------
# Default test data values (used by run_chatbot.py)
# ---------------------------------------------------------------------------
DEFAULT_AGENT_UUID=agent-0000000000-00000000
DEFAULT_USER_ID=test-user
DEFAULT_UPDATED_BY=test-user
